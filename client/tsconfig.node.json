{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "types/*": ["types/*"]
    }
  },
  "include": ["vite.config.ts", "src/types/booksType.tsx"],
  "exclude": ["node_modules"]
}
